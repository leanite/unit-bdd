<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivUserProfile"
        android:layout_width="@dimen/profile_pic"
        android:layout_height="@dimen/profile_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/downloading_placeholder" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="@dimen/fill"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing2x"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/ivUserProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="@dimen/fill"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginLeft="@dimen/spacing2x"
        android:layout_marginTop="@dimen/spacing1x"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/ivUserProfile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

</android.support.constraint.ConstraintLayout>